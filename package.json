{
  "name": "tienda-microservicios",
  "version": "1.0.0",
  "description": "Sistema de tienda con arquitectura de microservicios",
  "author": "Tu Nombre",
  "private": true,
  "license": "MIT",
  "scripts": {
    "construir": "nest build",
    "formatear": "prettier --write \"servicios/**/*.ts\" \"compartido/**/*.ts\"",
    "iniciar:desarrollo": "nest start --watch",
    "iniciar:depurar": "nest start --debug --watch",
    "iniciar:produccion": "node dist/servicios/puerta-enlace/principal",
    "iniciar:puerta-enlace": "nest start --watch puerta-enlace",
    "iniciar:autenticacion": "nest start --watch autenticacion",
    "iniciar:catalogo": "nest start --watch catalogo",
    "iniciar:pedidos": "nest start --watch pedidos",
    "lint": "eslint \"{servicios,compartido}/**/*.ts\" --fix",
    "pruebas": "jest",
    "pruebas:observar": "jest --watch",
    "pruebas:cobertura": "jest --coverage",
    "pruebas:depurar": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prisma:generar": "cd servicios/autenticacion && npx prisma generate",
    "prisma:migrar": "cd servicios/autenticacion && npx prisma migrate deploy"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/typeorm": "^11.0.0",
    "@prisma/client": "^5.22.0",
    "@prisma/extension-accelerate": "^3.0.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "mongoose": "^8.20.0",
    "mysql2": "^3.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^5.22.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "webpack": "^5.103.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./cobertura",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/servicios/",
      "<rootDir>/compartido/"
    ],
    "moduleNameMapper": {
      "^@compartido(|/.*)$": "<rootDir>/compartido/$1"
    }
  }
}
